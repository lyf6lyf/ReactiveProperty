<Page
    x:Class="UI.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d">

    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBox Text="{x:Bind Number1.Value, Mode=TwoWay}" />
            <TextBlock>+</TextBlock>
            <TextBox Text="{x:Bind Number2.Value, Mode=TwoWay}" />
            <TextBlock>=</TextBlock>
            <TextBlock Text="{x:Bind Number3.Value, Mode=OneWay}" />
        </StackPanel>

        <TextBlock
            Margin="40"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Text="{x:Bind Timer.Value.ToString(), Mode=OneWay}" />
    </Grid>
</Page>
